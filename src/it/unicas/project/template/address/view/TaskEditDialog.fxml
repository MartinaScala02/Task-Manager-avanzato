<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.TaskEditDialogController" stylesheets="@DarkTheme.css" styleClass="background"
            prefWidth="550" prefHeight="500">

    <children>
        <VBox spacing="15" alignment="TOP_LEFT"
              AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <!-- Titolo -->
            <Label text="Modifica Task" styleClass="header-label"/>

            <!-- Form -->
            <GridPane hgap="10" vgap="12">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Titolo:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="titoloField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Descrizione:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextArea fx:id="descrizioneField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                          wrapText="true" prefRowCount="4" maxHeight="120" VBox.vgrow="NEVER"
                          styleClass="form-field"/>

                <Label text="Categoria:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
                <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="PrioritÃ :" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
                <ComboBox fx:id="priorityComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Scadenza:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
                <DatePicker fx:id="scadenzaField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-field"/>
            </GridPane>

            <!-- Bottoni -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <children>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="OK" onAction="#handleOk" fx:id="okButton" styleClass="primary-button"/>
                    <Button text="Annulla" onAction="#handleCancel" styleClass="secondary-button"/>
                </children>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
