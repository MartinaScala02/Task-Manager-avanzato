<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="320.0" prefWidth="400.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.UtentiEditDialogController">

    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">

            <Label text="Modifica Profilo">
                <style>
                    -fx-font-family: 'Book Antiqua';
                    -fx-font-size: 30px;
                    -fx-text-fill: #F071A7;
                    -fx-font-weight: bold;
                </style>
            </Label>

            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="90.0" minWidth="70.0" prefWidth="80.0" />
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="246.0" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <children>
                    <Label style="-fx-font-size: 13px;" styleClass="label-bright" text="Nome" />
                    <TextField fx:id="nomeField" maxWidth="Infinity" promptText="Nome" GridPane.columnIndex="1" />

                    <Label style="-fx-font-size: 13px;" styleClass="label-bright" text="Cognome" GridPane.rowIndex="1" />
                    <TextField fx:id="cognomeField" maxWidth="Infinity" promptText="Cognome" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-font-size: 13px;" styleClass="label-bright" text="Email" GridPane.rowIndex="2" />
                    <TextField fx:id="emailField" maxWidth="Infinity" promptText="email@example.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label style="-fx-font-size: 13px;" styleClass="label-bright" text="Password" GridPane.rowIndex="3" />

                    <StackPane alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <TextField fx:id="pswVisibleField" managed="false" maxWidth="Infinity" minHeight="-Infinity" prefHeight="35.0" prefWidth="280.0" promptText="Password" style="-fx-padding: 0 35 0 10;" visible="false" />
                        <PasswordField fx:id="PasswordField" maxWidth="Infinity" minHeight="-Infinity" prefHeight="35.0" prefWidth="280.0" promptText="Password" style="-fx-padding: 0 35 0 10;" />

                        <ToggleButton fx:id="showpswBtn" mnemonicParsing="false" styleClass="button-icon" text="ðŸ‘">
                            <style>
                                -fx-background-color: transparent;
                                -fx-cursor: hand;
                                -fx-text-fill: white;
                                -fx-padding: 5 8;
                                -fx-font-size: 12px;
                            </style>
                            <StackPane.margin>
                                <Insets right="2.0" />
                            </StackPane.margin>
                        </ToggleButton>
                    </StackPane>
                </children>
            </GridPane>

            <Region VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="90.0" text="Annulla" />
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleOk" prefWidth="90.0" styleClass="button-green" text="Salva" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
