<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="363.0" prefWidth="516.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.UtentiLoginController">

    <children>
        <AnchorPane styleClass="background" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <VBox alignment="CENTER" spacing="25" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                <Label styleClass="label-header" text="Benvenuto!" />


                <GridPane alignment="CENTER" hgap="12.0" prefHeight="95.0" prefWidth="516.0" vgap="15">

                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="80.0" />
                        <ColumnConstraints halignment="CENTER" minWidth="250.0" />
                  <ColumnConstraints halignment="CENTER" minWidth="10.0" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="40" />
                    </rowConstraints>

                    <children>
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="usernameField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />


                        <HBox alignment="CENTER" spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <StackPane> <!-- Per sovrapporre PasswordField e TextField -->

                                <PasswordField fx:id="passwordField" prefWidth="250" />
                                <TextField fx:id="passwordVisibleField" managed="false" prefWidth="250" visible="false" />

                            </StackPane>
                        </HBox>

                         <ToggleButton fx:id="showPasswordBtn" mnemonicParsing="false" text="ðŸ‘" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                    </children>
                </GridPane>

                <!-- Pulsante -->
                <HBox alignment="CENTER" spacing="10">
                    <Button onAction="#handleLogin" text="Accedi" />
                    <Button onAction="#handleRegister" text="Registrati" />
                </HBox>

            </VBox>

        </AnchorPane>
    </children>
</AnchorPane>
